<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisclaimerActivity2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Disclaimer text -->
            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Two Way Communication"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/disclaimer2TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disclaimer :"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/disclaimerTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your disclaimer text here"
                android:textSize="16sp" />

            <!-- Checkbox to accept disclaimer -->
            <CheckBox
                android:id="@+id/acceptCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I accept the terms and conditions" />

            <!-- Proceed button -->
            <Button
                android:id="@+id/proceedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proceed" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>